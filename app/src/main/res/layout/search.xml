<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/white">

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:completionThreshold="1"
        android:textColor="@color/grayColor"
        android:padding="5dp"
        android:textCursorDrawable="@drawable/mycouser"
        android:textSize="18sp"
        android:background="@drawable/button_layer"
        android:hint="@string/sousuokuang"
        android:elevation="3dp"
        android:textColorHint="@color/grayColor"
        android:id="@+id/searchn_EditText"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
<TextView
    android:layout_width="0dp"
    android:layout_height="40dp"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/search_jiantieban"
    android:text="快捷搜索"
    android:gravity="center_vertical"
    android:padding="5dp"

    android:textColor="@color/halfblack"
    android:layout_marginRight="5dp"
    android:maxLines="2"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp" />
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:flexWrap="wrap"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_jiantieban"
            >
            <TextView
                android:id="@+id/search_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胖次网盘"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/button_layer"
                android:textColor="@color/redColor"/>
            <TextView
                android:id="@+id/search_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五马搜索"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/button_layer"
                android:textColor="@color/redColor"/>

            <TextView
                android:id="@+id/search_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="磁力"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/button_layer"
                android:textColor="@color/redColor"/>
            <TextView
                android:id="@+id/search_text3"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="豆瓣电影"
                android:background="@drawable/button_layer"
                android:textColor="@color/redColor"/>
            <TextView
                android:id="@+id/search_text_zhihu"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="搜索知乎"
                android:background="@drawable/button_layer"
                android:textColor="@color/redColor"/>
            <TextView
                android:id="@+id/search_text_weibo"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="微博"
                android:background="@drawable/button_layer"
                android:textColor="@color/redColor"/>
            <TextView
                android:id="@+id/search_text_csdn"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="CSDN"
                android:background="@drawable/button_layer"
                android:textColor="@color/redColor"/>

            <TextView
                android:id="@+id/search_text_github"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="Search Github"
                android:background="@drawable/button_layer"
                android:textColor="@color/redColor"/>
        </com.google.android.flexbox.FlexboxLayout>

        <ListView
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
            app:layout_constraintRight_toRightOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/search_listview"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>