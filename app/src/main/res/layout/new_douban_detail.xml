<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/toolbar"/>
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:id="@+id/movie_detail_Linearlayout">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            app:srcCompat="@drawable/bizhi" />
        </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/movie_relativelayout"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="24sp"
        android:textColor="@color/halfblack2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/searchpan"
        android:text="@string/loading"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail"
        android:text="@string/loading"
        android:textColor="@color/halfblack2"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/searchpan"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_red_layer"
        android:text="搜网盘"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:id="@+id/searchpan"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_red_layer"
        android:text="搜磁力"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/searchpan"
        android:layout_marginTop="20dp"
        android:id="@+id/searchci" />
</RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail2"
            android:text="@string/loading"
            android:textColor="@color/halfblack2"
            android:layout_below="@+id/movie_relativelayout"
            android:layout_margin="20dp"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>